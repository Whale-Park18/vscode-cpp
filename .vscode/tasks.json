{
	"version": "2.0.0",

	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: g++-13 활성 파일 빌드",
			"command": "/usr/bin/g++-13",
			"args": [
				"-fdiagnostics-color=always",
				"-g",
				"${file}",
				"-o",
				"${fileDirname}/${fileBasenameNoExtension}",
				"-std=c++20"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "컴파일러: /usr/bin/g++-13"
		}
	]
}